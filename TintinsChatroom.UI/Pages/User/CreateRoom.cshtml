@page
@model TintinsChatroom.UI.Pages.User.CreateRoomModel
@{
}
<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3 text-light">Register</h1>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger">
                </div>
                <div class="mb-3">
                    <label class="form-label text-light" asp-for="ChatRoom.ChatRoomName">Name of chatroom</label>
                    <input type="text" asp-for="ChatRoom.ChatRoomName" class="form-control bg-transparent text-light" />
                    <span asp-validation-for="ChatRoom.ChatRoomName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-outline-light">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>